	background-color: cornsilk !important;
}

.border {
	border-color: #c0c0c0 !important;
	border-style: solid !important;
}

.right-border {
	border-right: 3px;
}

.top-border {
	border-top: 3px;
}

.col {
	margin: 0 !important;

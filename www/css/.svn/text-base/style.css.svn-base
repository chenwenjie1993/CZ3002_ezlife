.row {
	display: -webkit-flex;
	-webkit-justify-content: left;
	-webkit-align-content: stretch;
	-webkit-align-items: center;
	margin: 0 !important;
	padding: 0;
	font-size: 20px;
	height: 100px;
	background-color: cornsilk;
	color: black;

}

.icon-title {
	text-align: left;
}

body {
	margin: 0;
	padding: 0;
	overflow: hidden;
}

